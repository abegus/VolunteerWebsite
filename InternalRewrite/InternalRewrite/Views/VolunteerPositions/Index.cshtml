@model IEnumerable<InternalRewrite.Models.VolunteerPosition>

@{
    ViewBag.Title = "Volunteers";
}

<h2>Volunteers</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { EventID = ViewBag.eventID })
</p>
<table class="table">
    <tr>
        <th>
            Position
        </th>
        <th>
            Description
        </th>
        <th>
            Filled By
        </th>
        <th>
            Filled Name
        </th>
        <th>
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @if (item.UserID != null)
            {
                @Html.DisplayFor(modelItem => item.User.Email)
            }
        </td>
        <td>
            @if (item.UserID != null)
            {
                @Html.DisplayFor(modelItem => item.User.FirstName)<text> </text>
                @Html.DisplayFor(modelItem => item.User.LastName)
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@if (ViewBag.eventID != null)
{
    <input type="button" value="Back to Event" onclick="location.href='@Url.Action("Index", "EventsAndViews", new { id = ViewBag.eventID })'" />
}
